<script>
    function toggleTextBox(show) {
        const textBox = document.getElementById("reason-other");
        const proceedButton = document.getElementById("proceed-button");
    
        if (show) {
            textBox.style.display = "block"; // Show text box
            textBox.addEventListener("input", updateProceedButton); // Check text box input
        } else {
            textBox.style.display = "none"; // Hide text box
            textBox.value = ""; // Clear text box value
            updateProceedButton(); // Update the button state
        }
    }
    
    function updateProceedButton() {
        const choice1Checked = document.getElementById("contactChoice1").checked;
        const choice2Checked = document.getElementById("contactChoice2").checked;
        const textBox = document.getElementById("reason-other");
        const proceedButton = document.getElementById("proceed-button");
    
        if (choice1Checked || (choice2Checked && textBox.value.trim().length > 0)) {
            proceedButton.disabled = false;
        } else {
            proceedButton.disabled = true;
        }
    }
    
    
    document.getElementById("contactChoice1").addEventListener("change", updateProceedButton);
    document.getElementById("contactChoice2").addEventListener("change", function () {
        toggleTextBox(this.checked); 
    });
     
     document.getElementById("proceed-button").addEventListener("click", function () {
        if (!this.disabled) { // Ensure the button is enabled
            window.location.href = "mobile2.html"; 
        }
    });

    
    updateProceedButton();
    
</script>
